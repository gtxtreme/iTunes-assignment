<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/default_margin"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cityTextViewListItem"
        style="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewFavourite"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="City Name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/latitudeTextViewListItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="1dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/cityTextViewListItem"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cityTextViewListItem"
        app:layout_constraintTop_toBottomOf="@+id/cityTextViewListItem"
        tools:text="latitude" />

    <ImageView
        android:id="@+id/imageViewFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/latitudeTextViewListItem"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cityTextViewListItem"
        tools:src="@drawable/ic_favorite_border" />

</androidx.constraintlayout.widget.ConstraintLayout>